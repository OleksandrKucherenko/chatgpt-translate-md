{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Translation - Help",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "node",
      "runtimeArgs": ["--loader=ts-node/esm", "--experimental-specifier-resolution=node"],
      "cwd": "${workspaceRoot}",
      "args": ["--help"],
      "program": "${workspaceFolder}/clis/gpt/src/index.ts",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Translation - List of files",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "node",
      "runtimeArgs": ["--loader=ts-node/esm", "--experimental-specifier-resolution=node"],
      "cwd": "${workspaceRoot}",
      "args": ["translate", "--source", "${workspaceFolder}/output/processing.txt", "--list"],
      "program": "${workspaceFolder}/clis/gpt/src/index.ts",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
